# ===========================================
# EventFlow PRO - Environment Configuration
# ===========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin
# cp .env.example .env

# ===========================================
# DATABASE
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=eventflow

# Database Connection Pool
# Production için önerilen değerler
DB_POOL_MAX=50
DB_POOL_MIN=10

# Slow Query Logging (ms) - Bu değerin üzerindeki sorgular loglanır
SLOW_QUERY_THRESHOLD=500

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# KRITIK: Production'da güçlü bir secret kullanın (min 32 karakter)
# Oluşturmak için: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=7d

# ===========================================
# SERVER
# ===========================================
PORT=4000
NODE_ENV=development

# ===========================================
# CORS
# ===========================================
# İzin verilen origin'ler (virgülle ayırın)
# Production'da gerçek domain'leri ekleyin
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# RATE LIMITING
# ===========================================
# Genel rate limit ayarları
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ===========================================
# SMTP (Mail)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@eventflow.com

# ===========================================
# AI SERVICES
# ===========================================
# Mistral AI - Excel parsing için Pixtral vision modeli
# API key almak için: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# ===========================================
# OPTIONAL SERVICES
# ===========================================

# Redis (for caching/sessions)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Sentry (error tracking)
# SENTRY_DSN=
