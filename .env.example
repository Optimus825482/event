# ===========================================
# EventFlow PRO - Coolify Environment Variables
# ===========================================
# Bu değişkenleri Coolify panelinde tanımlayın

# ============ DATABASE ============
DB_USERNAME=postgres
DB_PASSWORD=guclu-sifre-en-az-16-karakter
DB_NAME=eventflow

# ============ JWT (GÜVENLİK KRİTİK!) ============
# En az 32 karakter, rastgele oluşturulmuş
# Örnek: openssl rand -base64 48
JWT_SECRET=en-az-32-karakter-gizli-anahtar-buraya-rastgele-olusturun
JWT_EXPIRES_IN=15m

# ============ REFRESH TOKEN ============
JWT_REFRESH_SECRET=farkli-en-az-32-karakter-refresh-icin
JWT_REFRESH_EXPIRES_IN=7d

# ============ DEFAULT ADMIN (İLK KURULUM) ============
# İlk kurulumda admin kullanıcısı oluşturmak için
# En az 12 karakter, büyük/küçük harf, rakam ve özel karakter içermeli
# Örnek: EventFlow@2025!Secure
DEFAULT_ADMIN_PASSWORD=

# ============ API URLs ============
# Hostinger DNS'de A kayıtları eklendikten sonra kullanılacak
NEXT_PUBLIC_API_URL=https://api.eventflow.optimistdemo.cloud/api
NEXT_PUBLIC_SOCKET_URL=https://api.eventflow.optimistdemo.cloud

# Frontend URL (CORS için - GÜVENLİK KRİTİK!)
FRONTEND_URL=https://eventflow.optimistdemo.cloud

# ============ SMTP (Opsiyonel) ============
# Mail gönderimi için gerekli
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=EventFlow PRO <noreply@your-domain.com>
